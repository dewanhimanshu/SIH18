<!DOCTYPE html>
<html>
  <head>
    <title>SIH</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

     <%= stylesheet_link_tag 'noty' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <%= stylesheet_link_tag 'themes/relax' %>



  </head>

  <body>

    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="text-center" id="sidebar-btn-left">
              News
            </div>
          <a class="navbar-brand" href="#">Brand</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li>
              <% if user_signed_in? %>
                <%= link_to "Home", root_path %>
              <% end %>
            </li>
          </ul>
          <!-- <form class="navbar-form navbar-left">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form> -->
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile<span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile Settings", edit_user_registration_path %></li>
                  <% if Apply.exists?(user_id: current_user.id, status: "applied") %>
                  <li role="separator" class="divider"></li>
                    <li>
                      <%= link_to "Edit Your Application", edit_apply_path(current_user.apply) %>
                    </li>
                  <% elsif Apply.exists?(user_id: current_user.id) %>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Application Status", applies_status_path %></li>
                  <% end %>
                  <% if !Apply.exists?(user_id: current_user.id) %>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Apply", new_apply_path %></li>
                  <% end %>
                </ul>
              </li>
              <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% if notice %>
      <p class="notice" style="margin-left: 350px"><%= notice %></p>
    <% elsif alert %>
      <p class="alert" style="margin-left: 350px"><%= alert %></p>
    <% end %>

    <div id="sidebar-left">
  		<ul id="news-bar">
        <li><%= link_to "Discussion", questions_path %></li>
        <li><a href="#">Circulars</a></li>
        <li><a href="#">News</a></li>
        <li><%= link_to 'FAQs', faq_index_path %></li>
        <li><a href="#">Tutorials</a></li>
        <li><a href="#">Application Status</a></li>
        <li><a href="#">Apply</a></li>
  		</ul>
  	</div>

    <div class="main-yield">
      <%= yield %>
    </div>
    <%= javascript_include_tag "noty" %>
    <%= javascript_include_tag 'mo' %>


    <script>

      $(document).ready(function(){
        $('#sidebar-btn-left').click(function(){
  			     $('#sidebar-left').toggleClass('visible');
  		  });

  //swal("Hello world!")
       new Noty({

    text: 'Welcome',
    theme: "relax",
    type: 'success',
    animation: {
        open: function (promise) {
            var n = this;
            var Timeline = new mojs.Timeline();
            var body = new mojs.Html({
                el        : n.barDom,
                x         : {500: 0, delay: 0, duration: 500, easing: 'elastic.out'},
                isForce3d : true,
                onComplete: function () {
                    promise(function(resolve) {
                        resolve();
                    })
                }
            });

            var parent = new mojs.Shape({
                parent: n.barDom,
                width      : 200,
                height     : n.barDom.getBoundingClientRect().height,
                radius     : 0,
                x          : {[150]: -150},
                duration   : 1.2 * 500,
                isShowStart: true
            });

            n.barDom.style['overflow'] = 'visible';
            parent.el.style['overflow'] = 'hidden';

            var burst = new mojs.Burst({
                parent  : parent.el,
                count   : 10,
                top     : n.barDom.getBoundingClientRect().height + 75,
                degree  : 90,
                radius  : 75,
                angle   : {[-90]: 40},
                children: {
                    fill     : '#EBD761',
                    delay    : 'stagger(500, -50)',
                    radius   : 'rand(8, 25)',
                    direction: -1,
                    isSwirl  : true
                }
            });

            var fadeBurst = new mojs.Burst({
                parent  : parent.el,
                count   : 2,
                degree  : 0,
                angle   : 75,
                radius  : {0: 100},
                top     : '90%',
                children: {
                    fill     : '#EBD761',
                    pathScale: [.65, 1],
                    radius   : 'rand(12, 15)',
                    direction: [-1, 1],
                    delay    : .8 * 500,
                    isSwirl  : true
                }
            });

            Timeline.add(body, burst, fadeBurst, parent);
            Timeline.play();
        },
        close: function (promise) {
            var n = this;
            new mojs.Html({
                el        : n.barDom,
                x         : {0: 500, delay: 10, duration: 500, easing: 'cubic.out'},
                skewY     : {0: 10, delay: 10, duration: 500, easing: 'cubic.out'},
                isForce3d : true,
                onComplete: function () {
                    promise(function(resolve) {
                        resolve();
                    })
                }
            }).play();
        }
    }
}).show();








});
    </script>
  </body>
</html>
